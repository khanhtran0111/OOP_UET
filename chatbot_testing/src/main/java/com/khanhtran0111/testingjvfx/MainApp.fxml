<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="layout" alignment="TOP_LEFT" spacing="10" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.khanhtran0111.testingjvfx.AppController">
    <children>
        <TextArea fx:id="chatArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS"/>
        <TextField fx:id="userInput" promptText="Type your message here..." onKeyPressed="#manage_key_press"/>
        <Button fx:id="sendButton" mnemonicParsing="false" text="Send" onAction="#manage_send_message"/>
    </children>
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
</VBox>
